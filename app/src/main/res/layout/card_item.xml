<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivcardImage"
                android:layout_width="@dimen/size_50dp"
                android:layout_height="@dimen/size_50dp"
                app:srcCompat="@drawable/ic_card_placeholder">

        </androidx.appcompat.widget.AppCompatImageView>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_16dp"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvBrandType"
                    style="@style/FontPrimaryMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    tools:text="Visa" />

            <TextView
                    android:id="@+id/tvlastDigit"
                    style="@style/FontPrimaryRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    tools:text="**** **** **** 4242" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvDefault"
                    style="@style/FontPrimaryRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/selected"
                    android:textColor="@color/com_facebook_blue"
                    android:textSize="18sp"
                    android:visibility="visible" />

            <TextView
                    android:id="@+id/tvSubOnOff"
                    style="@style/FontPrimaryRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/subscription_on"
                    android:textColor="@color/green"
                    android:textSize="14sp"
                    android:visibility="visible" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>