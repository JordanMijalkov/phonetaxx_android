<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/size_10dp"
        android:paddingRight="@dimen/size_10dp"
        android:paddingTop="@dimen/size_20dp"
        android:orientation="vertical"
        android:background="@color/mainBackgroundColor"
        tools:context=".ui.navigationdrawer.home.MyHomeFragment">

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/FontPrimaryMedium.size_20sp.PrimaryText"
            android:text="@string/menu_phone_usase"
            android:layout_marginTop="@dimen/size_8dp"
            android:layout_marginLeft="@dimen/size_8dp"
            android:layout_marginRight="@dimen/size_8dp"
            android:paddingBottom="@dimen/size_10dp"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:orientation="horizontal"
    >
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_4dp"
                app:contentPadding="@dimen/size_10dp"
                app:cardCornerRadius="@dimen/size_8dp"
                app:cardElevation="@dimen/size_2dp"
                android:id="@+id/cardBusiness"
                app:cardBackgroundColor="@color/phone_uses_card_selector"
                android:layout_weight="1"
        >

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/size_20dp"
                        android:layout_height="@dimen/size_16dp"
                        android:layout_gravity="center"
                        android:id="@+id/ivBusiness"
                        android:background="@drawable/phone_uses_bussiness_image_selector"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_8dp"
                        android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FontPrimaryRegular.size_14sp.PrimaryText"
                            android:textColor="@color/phone_uses_text_selector"
                            android:id="@+id/tvBusinesCount"
                            tools:text="103"

                    />
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FontPrimaryRegular.size_10sp.PrimaryText"
                            android:layout_marginTop="@dimen/size_2dp"
                            android:textAllCaps="true"
                            android:id="@+id/tvBusinessText"
                            android:maxLines="1"
                            android:text="@string/business"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="@dimen/size_6sp"
                            app:autoSizeMaxTextSize="@dimen/size_10sp"
                            app:autoSizeStepGranularity="@dimen/size_1sp"
                            android:textColor="@color/phone_uses_text_selector"

                    />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:contentPadding="@dimen/size_10dp"
                app:cardCornerRadius="@dimen/size_8dp"
                app:cardElevation="@dimen/size_2dp"
                android:layout_margin="@dimen/size_4dp"
                android:id="@+id/cardPersonal"
                app:cardBackgroundColor="@color/phone_uses_card_selector"
        >

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/size_14dp"
                        android:layout_height="@dimen/size_18dp"
                        android:layout_gravity="center"
                        android:id="@+id/ivPersonal"
                        android:background="@drawable/phone_uses_persnal_image_selector"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_8dp"
                        android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FontPrimaryRegular.size_14sp.PrimaryText"
                            android:id="@+id/tvPersonalCount"
                            android:textColor="@color/phone_uses_text_selector"
                            tools:text="103"

                    />
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FontPrimaryRegular.size_10sp.PrimaryText"
                            android:layout_marginTop="@dimen/size_2dp"
                            android:id="@+id/tvPersonalText"
                            android:textAllCaps="true"
                            android:text="@string/personal"
                            android:maxLines="1"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="@dimen/size_6sp"
                            app:autoSizeMaxTextSize="@dimen/size_10sp"
                            app:autoSizeStepGranularity="@dimen/size_1sp"
                            android:textColor="@color/phone_uses_text_selector"

                    />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                app:contentPadding="@dimen/size_10dp"
                app:cardCornerRadius="@dimen/size_8dp"
                app:cardElevation="@dimen/size_2dp"
                android:layout_margin="@dimen/size_4dp"
                android:id="@+id/cardUncategorized"
                app:cardBackgroundColor="@color/phone_uses_card_selector"

        >

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/size_20dp"
                        android:layout_height="@dimen/size_16dp"
                        android:layout_gravity="center"
                        android:id="@+id/ivUncategorized"
                        android:background="@drawable/phone_uses_uncategori_image_selector"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_8dp"
                        android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FontPrimaryRegular.size_14sp.PrimaryText"
                            android:id="@+id/tvUncategorizedCount"
                            android:textColor="@color/phone_uses_text_selector"
                            tools:text="103"

                    />
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FontPrimaryRegular.size_10sp.PrimaryText"
                            android:layout_marginTop="@dimen/size_2dp"
                            android:id="@+id/tvUncategorizedText"
                            android:textAllCaps="true"
                            android:maxLines="1"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="@dimen/size_6sp"
                            app:autoSizeMaxTextSize="@dimen/size_10sp"
                            app:autoSizeStepGranularity="@dimen/size_1sp"
                            android:text="@string/menu_uncategorized"
                            android:textColor="@color/phone_uses_text_selector"

                    />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="@dimen/size_0_8dp"
          android:background="@color/gray"
          android:layout_marginTop="@dimen/size_20dp"
          android:layout_marginLeft="@dimen/size_8dp"
          android:layout_marginRight="@dimen/size_8dp"
    />
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <com.phonetaxx.adapter.FilterRecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <include layout="@layout/no_content_layout"/>

    </FrameLayout>
</LinearLayout>
