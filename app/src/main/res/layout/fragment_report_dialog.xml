<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/size_20dp"
            app:cardCornerRadius="@dimen/size_20dp"
            tools:context=".ui.navigationdrawer.home.AddNumberDialogFragment">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hello_blank_fragment">

            <ImageView
                    android:layout_width="@dimen/size_50dp"
                    android:layout_height="@dimen/size_50dp"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/size_12dp"
                    android:src="@drawable/ic_close_dialog"
                    android:id="@+id/ivClose"

            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivClose"
                    android:layout_margin="@dimen/size_20dp"
                    android:orientation="vertical"
            >
                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        style="@style/FontPrimaryMedium.size_18sp.PrimaryText"
                        android:text="@string/send_resports_to"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/tvEmail"
                        android:layout_marginTop="@dimen/size_16dp"
                        style="@style/FontPrimaryMedium.size_16sp.PrimaryColor"
                        android:text="abc@gmail.com"/>

                <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ButtonStyle"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/size_70dp"
                        android:paddingRight="@dimen/size_70dp"
                        android:id="@+id/btnSendEmail"
                        android:layout_marginTop="@dimen/size_30dp"
                        android:layout_marginBottom="@dimen/size_20dp"
                        android:text="@string/send_email"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_24dp"
                        android:gravity="center"
                        style="@style/FontPrimaryMedium.size_18sp.PrimaryText"
                        android:text="Export As"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_20dp"
                        android:orientation="horizontal"
                >


                    <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/size_0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:contentPadding="@dimen/size_12dp"
                            app:cardCornerRadius="@dimen/size_10dp"
                            app:cardElevation="@dimen/size_4dp"
                            android:layout_margin="@dimen/size_6dp"
                            android:id="@+id/cardPdf"

                    >

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/size_20dp"
                                    android:layout_height="@dimen/size_20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_pdf"
                            />


                            <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/FontPrimaryMedium.size_12sp.PrimaryText"
                                    android:layout_marginLeft="@dimen/size_12dp"
                                    android:paddingTop="@dimen/size_6dp"
                                    android:paddingBottom="@dimen/size_6dp"
                                    android:text="@string/pdf"

                            />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/size_0dp"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_weight="1"
                            app:contentPadding="@dimen/size_12dp"
                            app:cardCornerRadius="@dimen/size_10dp"
                            app:cardElevation="@dimen/size_4dp"
                            android:layout_margin="@dimen/size_6dp"
                            android:id="@+id/cardXls"

                    >

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/size_20dp"
                                    android:layout_height="@dimen/size_20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_xl"
                            />


                            <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/FontPrimaryMedium.size_12sp.PrimaryText"
                                    android:layout_marginLeft="@dimen/size_12dp"
                                    android:paddingTop="@dimen/size_6dp"
                                    android:paddingBottom="@dimen/size_6dp"
                                    android:text="@string/xls"

                            />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/size_0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:contentPadding="@dimen/size_12dp"
                            app:cardCornerRadius="@dimen/size_10dp"
                            app:cardElevation="@dimen/size_4dp"
                            android:layout_margin="@dimen/size_6dp"
                            android:id="@+id/cardCvs"

                    >

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/size_20dp"
                                    android:layout_height="@dimen/size_20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_cvs"
                            />


                            <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/FontPrimaryMedium.size_12sp.PrimaryText"
                                    android:layout_marginLeft="@dimen/size_12dp"
                                    android:paddingTop="@dimen/size_6dp"
                                    android:paddingBottom="@dimen/size_6dp"
                                    android:text="@string/cvs"

                            />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>