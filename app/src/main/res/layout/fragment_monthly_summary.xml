<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/mainBackgroundColor"
        tools:context=".ui.navigationdrawer.home.MyHomeFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/size_10dp"

            >

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10dp"
                android:id="@+id/rlCalender"
                android:layout_marginBottom="@dimen/size_4dp"
                android:gravity="center"
        >
            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/size_24dp"
                    android:layout_height="@dimen/size_24dp"
                    android:id="@+id/iv_calender"
                    android:text="May,2020"
                    android:src="@drawable/ic_calendar"
            />
            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontPrimaryMedium.size_18sp.PrimaryText"
                    android:id="@+id/tvSelectedDate"
                    android:layout_marginLeft="@dimen/size_16dp"
                    android:layout_toRightOf="@+id/iv_calender"
                    android:text="May,2020"
            />
            <ImageView
                    android:layout_width="@dimen/size_16dp"
                    android:layout_height="@dimen/size_10dp"
                    android:id="@+id/ivDropdownToolbar"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/tvSelectedDate"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:src="@drawable/ic_dropdown_dark"/>
        </RelativeLayout>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_8dp"
                app:cardElevation="@dimen/size_4dp"
                app:cardCornerRadius="@dimen/size_12dp"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/size_20dp"
            >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="@dimen/size_0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:layout_weight="1"
                            android:id="@+id/tvYear"
                            style="@style/FontPrimaryMedium.size_28sp.PrimaryText"
                            tools:text="2020"
                    />
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="@dimen/size_0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:layout_weight="1"
                            android:id="@+id/tvAmount"
                            style="@style/FontPrimaryMedium.size_28sp.PrimaryColor"
                            tools:text="$100"
                    />

                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/size_4dp"
                        android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="@dimen/size_0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:layout_weight="1"
                            style="@style/FontPrimaryMedium.size_12sp.PrimaryText"
                            android:text="@string/ytd_summary"
                    />
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="@dimen/size_0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:layout_weight="1"
                            android:id="@+id/tvAmountPotential"
                            style="@style/FontPrimaryMedium.size_12sp.PrimaryColor"
                            android:text="@string/_100_potential"
                    />

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_8dp"
                app:cardElevation="@dimen/size_4dp"
                app:cardCornerRadius="@dimen/size_12dp"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/size_20dp"
            >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="@dimen/size_0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:layout_weight="1"
                            android:id="@+id/tvMonth"
                            style="@style/FontPrimaryMedium.size_28sp.PrimaryText"
                            tools:text="May"
                    />
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="@dimen/size_0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:layout_weight="1"
                            style="@style/FontPrimaryMedium.size_28sp.PrimaryColor"
                            tools:text="$100"
                            android:id="@+id/tvAmountMonth"
                    />

                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/size_4dp"
                        android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="@dimen/size_0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:layout_weight="1"
                            android:id="@+id/tvMonthPhoneCall"
                            style="@style/FontPrimaryMedium.size_12sp.PrimaryText"
                            tools:text="300 Phone calls"
                    />
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="@dimen/size_0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:layout_weight="1"
                            android:id="@+id/tvMonthyUsesPercentageAmount"
                            style="@style/FontPrimaryMedium.size_12sp.PrimaryColor"
                            tools:text="90% Complete"
                    />

                </LinearLayout>

                <com.phonetaxx.custom.CircularProgressView
                        android:layout_width="@dimen/size_200dp"
                        android:layout_height="@dimen/size_200dp"
                        android:layout_gravity="center"
                        android:id="@+id/circularProgressView"
                        android:layout_margin="@dimen/size_30dp"
                />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                >

                    <LinearLayout android:layout_width="@dimen/size_0dp"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:layout_weight="1"
                                  android:gravity="center"
                    >
                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/size_26dp"
                                android:layout_height="@dimen/size_26dp"
                                android:src="@drawable/ic_business"
                        />
                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/FontPrimaryMedium.size_12sp.PrimaryText"
                                tools:text="104 Calls"
                                android:id="@+id/tvBusinessCall"
                                android:layout_marginLeft="@dimen/size_10dp"
                                android:layout_marginRight="@dimen/size_10dp"
                        />
                    </LinearLayout>
                    <LinearLayout android:layout_width="@dimen/size_0dp"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:layout_weight="1"
                                  android:gravity="center"
                    >
                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/size_26dp"
                                android:layout_height="@dimen/size_26dp"
                                android:src="@drawable/ic_personal_call_monthly_summary"
                        />
                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/FontPrimaryMedium.size_12sp.PrimaryText"
                                tools:text="104 Calls"
                                android:id="@+id/tvPersonalCall"
                                android:layout_marginLeft="@dimen/size_10dp"
                                android:layout_marginRight="@dimen/size_10dp"
                        />
                    </LinearLayout>
                    <LinearLayout android:layout_width="@dimen/size_0dp"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:layout_weight="1"
                                  android:gravity="center"
                    >
                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/size_26dp"
                                android:layout_height="@dimen/size_26dp"
                                android:src="@drawable/ic_uncategory_monthly_summary"
                        />
                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/FontPrimaryMedium.size_12sp.PrimaryText"
                                tools:text="104 Calls"
                                android:id="@+id/tvUncategorizedCall"
                                android:layout_marginLeft="@dimen/size_10dp"
                                android:layout_marginRight="@dimen/size_10dp"
                        />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ButtonStyle"
                android:id="@+id/btnPhoneUses"
                android:layout_marginTop="@dimen/size_30dp"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:text="@string/go_to_phone_usage"/>
        <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ButtonStyle"
                android:id="@+id/btnViewAllCall"
                android:layout_marginBottom="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_16dp"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:text="@string/view_all_calls"/>

    </LinearLayout>
</ScrollView>