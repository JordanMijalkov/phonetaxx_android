<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_margin="@dimen/size_8dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/size_16dp"
    >

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvName"
                style="@style/FontPrimaryMedium.size_16sp.PrimaryText"
                android:text="Bonnie Relair"
        />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:src="@drawable/ic_check_circle"
            android:layout_gravity="center"
            android:id="@+id/icProfile"
    />
    <ImageView android:layout_width="@dimen/size_40dp" android:layout_height="@dimen/size_40dp"
               android:id="@+id/ivMore"
               android:padding="@dimen/size_6dp"
               android:visibility="gone"
               android:src="@drawable/ic_more"/>
</LinearLayout>