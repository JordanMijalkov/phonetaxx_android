<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_12dp"
    android:gravity="center"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icProfile"
        android:layout_width="@dimen/size_50dp"
        android:layout_height="@dimen/size_50dp"
        android:src="@drawable/ic_contact_placeholder"
        android:visibility="visible" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_12dp"
        android:layout_marginVertical="@dimen/size_8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvName"
                style="@style/FontPrimaryMedium.size_16sp.PrimaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bonnie Relair" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/FontPrimaryRegular.size_14sp.SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=" (" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRelation"
                style="@style/FontPrimaryRegular.size_14sp.SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Personal" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/FontPrimaryRegular.size_14sp.SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=")" />
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPhoneNumber"
            style="@style/FontPrimaryRegular.size_14sp.SecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+919999999999" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:padding="@dimen/size_10dp"
            android:src="@drawable/ic_delete"
            android:visibility="visible"
            app:tint="@color/colorBlack" />

        <TextView
            android:id="@+id/ivEdit"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_2dp"
            android:background="@drawable/edit_bg"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="Edit"
            android:textSize="@dimen/_10sdp"
            android:visibility="visible"
            app:tint="@color/colorBlack" />


    </LinearLayout>
</LinearLayout>